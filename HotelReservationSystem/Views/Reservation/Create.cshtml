@model RoomTypeReservationViewModel
@{
}
<div class="container">

<h1>Забронировть</h1>

<div class="container">


    <div class="row">
    <div class="col-md-6">
        <section>
            <form id="reservation" method="post">
                <h2>Тип номера:</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RoomTypeId" />
                <input type="hidden" asp-for="RoomTypeImageUrl" />
                <input type="hidden" asp-for="RoomTypeName" />
                <input type="hidden" asp-for="AdultsCapacity" />
                <input type="hidden" asp-for="KidsCapacity" />


                <div class="form-floating">
                    <input asp-for="AdultsIn" class="form-control" aria-required="true" value="1" min="1" max="@Model.AdultsCapacity" />
                    <label asp-for="AdultsIn" class="form-label"></label>
                    <span asp-validation-for="AdultsIn" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="KidsIn" class="form-control" aria-required="true" value="0" min="0" max="@Model.KidsCapacity"/>
                    <label asp-for="KidsIn" class="form-label"></label>
                    <span asp-validation-for="KidsIn" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="DateIn" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" placeholder="DD MM YYYY" name="DateIn" required>
                    <label asp-for="DateIn" class="form-label"><i class="fa fa-calendar-o"></i>Заезд</label>
                    <span asp-validation-for="DateIn" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="DateOut" class="form-control" type="date" min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" placeholder="DD MM YYYY" name="DateOut" required>
                    <label asp-for="DateOut" class="form-label"><i class="fa fa-calendar-o"></i>Выезд</label>
                    <span asp-validation-for="DateOut" class="text-danger"></span>
                </div>
                @if (!ViewData.ModelState.IsValid)
                {
                            var errors = ViewData.ModelState.Values.SelectMany(v => v.Errors);
                            foreach (var error in errors)
                            {
                                <div class="alert alert-danger">@error.ErrorMessage</div>
                            }
                }
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg w3-red w3-button">Создать резервацию</button>
                </div>
                        
            </form>
        </section>
    </div>
    <div class="col-md-4 col-md-offset-2">
        <section>
            <h2>@Model.RoomTypeName</h2>
            <hr />
            <img src="@Model.RoomTypeImageUrl" />
            
            
        </section>
    </div>
</div>
</div>


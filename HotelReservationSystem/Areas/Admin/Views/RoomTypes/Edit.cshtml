@model HotelReservationSystem.Models.RoomType

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить</h1>

<h4>Тип Номера</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdultsCapacity" class="control-label"></label>
                <input asp-for="AdultsCapacity" class="form-control" />
                <span asp-validation-for="AdultsCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KidsCapacity" class="control-label"></label>
                <input asp-for="KidsCapacity" class="form-control" />
                <span asp-validation-for="KidsCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomArea" class="control-label"></label>
                <input asp-for="RoomArea" class="form-control" />
                <span asp-validation-for="RoomArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomImageURL" class="control-label"></label>
                <input asp-for="RoomImageURL" class="form-control" />
                <span asp-validation-for="RoomImageURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HasBath">
                    @Html.DisplayNameFor(model => model.HasBath)
                    <i class="fa fa-bath"></i>
                    @Html.CheckBox("HasBath")
                </label>
            </div>
            <div class="form-group">
                <label asp-for="HasPhone">
                    @Html.DisplayNameFor(model => model.HasPhone)
                    <i class="fa fa-phone"></i>
                    @Html.CheckBox("HasPhone")
                </label>
            </div>
            <div class="form-group">
                <label asp-for="HasTV">
                    @Html.DisplayNameFor(model => model.HasTV)
                    <i class="fa fa-television"></i>
                    @Html.CheckBox("HasTV")
                </label>
            </div>
            <div class="form-group">
                <label asp-for="HasWiFi">
                    @Html.DisplayNameFor(model => model.HasWiFi)
                    <i class="fa fa-wifi"></i>
                    @Html.CheckBox("HasWiFi")
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>


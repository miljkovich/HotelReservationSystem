@model HotelReservationSystem.Models.RoomType

@{
    ViewData["Title"] = "Details";
}

<h1>Детали</h1>

<div>
    <h4>Тип Номера</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdultsCapacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdultsCapacity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KidsCapacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KidsCapacity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomArea)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomArea)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomImageURL)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomImageURL)
        </dd>
        <dt class = "col-sm-2">
            Фото
        </dt>
        <dd class = "col-sm-10">

            <img src=@Html.DisplayFor(model => model.RoomImageURL) />
        </dd>
        <p class="w3-large">
            @if (Model.HasBath)
                {
                    <i class="fa fa-bath"></i> 
                }
            @if (Model.HasPhone)
                {
                    <i class="fa fa-phone"></i> 
                }
            @if (Model.HasTV)
                {
                    <i class="fa fa-tv"></i> 
                }
            @if (Model.HasWiFi)
                {
                    <i class="fa fa-wifi"></i> 
                }
        </p>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Вернуться</a>
</div>
